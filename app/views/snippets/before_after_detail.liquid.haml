%div
  %h2.story_title {{ success_story.prename | append: " " | append: success_story.name | append: " aus " | append: success_story.place | append: " -" | append: success_story.lost_weight | append: " Kg" }}
  .thumbnail{:style => "padding:20px !important"}
    .doubleimg-box#doubleimg
      %a{ vorsrc: '{{ success_story.before_image.url }}', nachsrc: '{{ success_story.after_image.url }}' }
        .img-box
          %img{ src: '{{ success_story.before_image.url | resize: "640x1280#" }}', :style => "float:left;max-width:50%" }
        .img-box
          %img{ src: '{{ success_story.after_image.url | resize: "640x1280#" }}', :style => "float:left;max-width:50%" }  
    .clearfix
    %br
    {% include subnavigation_buttons %}
    .text-center
      %br
      %script{:async => "async", :src => "//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-547f2f7b7c2d7fa0", :type => "text/javascript"}
      .addthis_sharing_toolbox
      %br
    .story_title{:style => "text-weight:bold;margin-bottom:20px"}{{ success_story.experience_title }}
    {% if (success_story.start_date != nil && success_story.start_date != '') && (success_story.programm_duration != nil && success_story.programm_duration != '') && (success_story.number_of_consultations != nil && success_story.number_of_consultations != '') && (success_story.feeling_of_abdiction != nil && success_story.feeling_of_abdiction != '') %}
    %table.round-corner-table{:style => "width:100%;background-color:#FFF6FC"}
      %tr
        %td  &nbsp;
      {% if success_story.start_date != nil && success_story.start_date != '' %}	   
      %tr
        %td.text-center{:style => "width:10%"}
          %span.pink_text.glyphicon.glyphicon-play-circle
        %td{:style => "width:35%"}
          Programmstart:
        %td{:style => "width:55%"}
          {{ success_story.start_date | localized_date: '%d.%m.%Y' }} 
      {% endif %}
      {% if success_story.programm_duration != nil && success_story.programm_duration != '' %}	   
      %tr
        %td.text-center{:style => "width:10%"}
          %span.pink_text.glyphicon.glyphicon-time
        %td{:style => "width:35%"}
          Programmdauer:
        %td{:style => "width:35%"}
          {{ success_story.programm_duration }} Wochen
      {% endif %}
      {% if success_story.number_of_consultations != nil && success_story.number_of_consultations != '' %}	   
      %tr
        %td.text-center{:style => "width:10%"}
          %span.pink_text.glyphicon.glyphicon-dashboard
        %td{:style => "width:35%"}
          Betreuungen:
        %td{:style => "width:35%"}
          {{ success_story.number_of_consultations  }} Termine Ã  20 min
      {% endif %}
      {% if success_story.feeling_of_abdiction != nil && success_story.feeling_of_abdiction != '' %}	   
      %tr{:style => "vertical-align:top"}
        %td.text-center{:style => "width:10%"}
          %span.pink_text.glyphicon.glyphicon-eye-open
        %td{:style => "width:35%"}
          Beobachtungen:
        %td{:style => "width:35%"}
          {{ success_story.feeling_of_abdiction }} 
      {% endif %}
      %tr
        %td  &nbsp;
    %br
    {% endif %}
    {{ success_story.experience }}