---
title: Aktuelles
slug: aktuelles
published: true
handle: news
---
{% extends layouts/double-columns %}

{% block content/main %}

{% if params.slug and params.type %}

{% with_scope _slug: params.slug, published_at.lt: today %}
{% assign this_news = contents.news.first %}
{% endwith_scope %}

{% include news_header %}

{% if this_news.interview %}
{% include interview with news:this_news %}
{% elsif this_news.recipe %}
{% include recipe with news:this_news %}
{% elsif this_news.illustrative_text %}
{% include illustrative_text with news:this_news %}
{% else %}

/ # UNSUPPORTED
.well
  %h2 Nachricht konnte nicht gefunden werden.

{% endif %}
%hr
.row
  .col-sm-4.col-xs-12.text-center
  .col-sm-4.col-xs-12.text-center
    %div{:style => "margin-bottom:10px"}
      %ul.pager{:style => "margin-top:0px; display: inline" }
        %li
          %a{ href: "{{ path }}" } {{ "button_back" | translate }}
  .col-sm-4.col-xs-12.text-center

{% else %}

{% assign current_page = params.page | default: 1 %}
{% if params.tag == null %}
{% with_scope order_by: 'published_at desc', published_at.lt: today %}
{% include news_list %}
{% endwith_scope %}
{% else %}
{% with_scope order_by: 'published_at desc', published_at.lt: today, tags: params.tag %}
{% include news_list %}
{% endwith_scope %}
{% endif %}

{% endif %}

{% endblock %}
