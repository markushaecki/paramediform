---
title: Kontakt
slug: kontakt
published: true
handle: contact_form
---
{% extends layouts/double-columns %}

{% block header %}
{{ 'jquery.steps.min.js' | javascript_tag }}
{% endblock %}

{% block content/main %}

{% if contact %}

{% if contact.errors.size > 0 %}
.alert.alert-warning
  %strong {{ 'following_errors_occured' | translate }}:
  %ul
    {% for error in contact.errors %}
    {% unless error[0] == '_slug' %}
    %li
      {{ error[0] | prepend: 'contact_labels_' | translate }}
      &nbsp;
      {{ 'contact_label_is_required' | translate }}
    {% endunless %}
    {% endfor %}

{% else %}

.alert.alert-success
  %strong Hi {{ contact.surname }} {{ contact.lastname }}, your form has been correctly submitted.

{% endif %}

{% endif %}

{% model_form 'contacts', class: 'form-horizontal' %}
%h2 Hiermit kontaktieren Sie die Systemzentrale:
%br
.row
  .col-sm-7.col-xs-12
    %img.img-responsive{ src: "{{ 'systemzentrale.png' | theme_image_url }}" }
    %br
  .col-sm-5.col-xs-12
    ParaMediForm
    %br
    Villa Hünerwadel
    %br
    Schützenmattstrasse 3
    %br
    5600 Lenzburg
    %br
    %br
    Telefon +41 62 888 88 28
    %br
    Fax +41 62 888 88 20
    %br
    %br


%legend Thema
.row{:style => "margin-bottom: 20px"}
  .col-sm-6.col-xs-12
    .radio
      %label
        %input{:type => "radio", :name => "content[subject]", :value => "Terminvereinbarung"} Terminvereinbarung
    .radio
      %label
        %input{:type => "radio", :name => "content[subject]", :value => "Fragen zur ParaMediForm-Methode"} Fragen zur Methode
  .col-sm-6.col-xs-12
    .radio
      %label
        %input{:type => "radio", :name => "content[subject]", :value => "Rückmeldung"} Rückmeldung
    .radio
      %label
        %input{:type => "radio", :name => "content[subject]", :value => "Anderes Thema"} Anderes Thema

%legend Absender
.row
  .col-sm-6.col-xs-12
    %select{ class: 'form-control', name: 'content[salutation]', placeholder: "Anrede" }
      {% for option in contents.contacts.salutation_options %}
      %option {{ option }}
      {% endfor %}
    %br
.row
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[surname]", :placeholder => "Vorname"}
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[lastname]", :placeholder => "Nachname"}
.row
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[address]", :placeholder => "Adresse"}
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[housenumber]", :placeholder => "Hausnummer"}
.row
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[zipcode]", :placeholder => "PLZ"}
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[place]", :placeholder => "Ort"}
.row
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[phone]", :placeholder => "Telefon"}
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[email]", :placeholder => "E-Mail"}
.row
  .col-sm-12.col-xs-12
    .checkbox
      %label
        %input{:type => "checkbox", :name => "content[existing_customer]"} Ich bin oder war bereits Kundin oder Kunde bei ParaMediForm.
    %br
%legend Nachricht
%textarea{:class => "form-control", :name => "content[message]", :value => "{{customer_message.name}}" } {{customer_message.message}}
%br
%legend Kontaktaufnahme
.radio
  %label
    %input{:type => "radio", :name => "content[type_of_contact]", :value => "E-Mail"} Bitte kontaktieren sie mich per E-Mail
.radio
  %label
    %input{:type => "radio", :name => "content[type_of_contact]", :value => "Telefon"} Bitte kontaktieren sie mich per Telefon
%br
.checkbox
  %label
    %input{:type => "checkbox", :name => "content[newsletter]", :checked => "yes"} Gerne erhalte ich auch in Zukunft Informationen von und über ParaMediForm.
%br
%br
.text-center
  %button{ :class => "btn btn-primary", :type => "submit"} Senden
%br
{% endmodel_form %}
%hr
{% endblock %}
