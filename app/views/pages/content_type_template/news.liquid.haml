---
title: Aktuelles
slug: aktuelles
published: true
listed: true
position: 5
handle: institute_news
---
{% extends parent %}

{% block content/main/tab_pane %}

{% capture url %}{{ institute.url }}/{{locale}}/news/all.json?page={{ params.page }}&tag={{ params.tag | encode }}{% endcapture %}
{% consume data from url %}
{% assign news = data.news %}
{% assign news_pagination = data.pagination %}
{% endconsume %}

{% if params.slug %}

{% capture url %}{{ institute.url }}/{{locale}}/news/one.json?slug={{ params.slug }}{% endcapture %}
{% consume data from url %}
{% assign this_news = data.news_entry %}
{% endconsume %}

{% include institute_news %}
%br
{% include generate_main_subnavigation with all:news, this:this_news %}
{% include subnavigation_buttons with pagerstyle: "margin-top:0px" %}

{% else %}

%ul.media-list
  {% if params.tag %}
  %div.text-center
    .tags.text-center{:style => "margin-bottom:5px;margin-top:1px"}
      %a.label.label-primary.tag.filtered_tag{ href: "{{ path }}" } {{ params.tag }}:
  {% endif %}
  {% for news_entry in news %}
  .media
    {{ news_entry.published_at | localized_date: '%d.%m.%Y' }}
    %h5{:style => "margin-top:0"}
      %a{ href: "?slug={{ news_entry.slug }}&page={{ params.page }}" } {{ news_entry.title }}
    .text
      {{ news_entry.introduction | truncate: 170 }}
    {% unless forloop.last %}
    %hr{:style => "margin-bottom:0px"}
    {% endunless %}
    {% if forloop.last %}
    %br
    {% endif %}
  {% endfor %}

  {% if news_pagination %}
  {% if params.tag == blank %}
  {% capture tag_params %}{% endcapture %}
  {% else %}
  {% capture tag_params %}&tag={{ params.tag | encode }}{% endcapture %}
  {% endif %}
  .text-center
    {% include pagination with pagination: news_pagination, other_params: tag_params %}

  {% endif %}
%hr{:style => "margin-bottom:0px"}
%b Aktuelles der Systemzentrale:
%br
%br
{% with_scope order_by: 'published_at desc', published_at.lt: today + 1, tags: 'wichtig' %}
{% include news_important %}
{% endwith_scope %}

{% endif %}

{% endblock %}
