---
title: Kontakt
published: true
slug: kontakt
listed: true
position: 6
handle: institute_contact
---
{% extends parent %}

{% block head_files %}
{{ 'jquery.placeholder.min.js' | javascript_tag }}
{{ 'contact.js' | javascript_tag }}
{% endblock %}

{% block description %}
%meta{name:"description", content:"Kontaktieren Sie die Ernährungsberatung {{ institute.name }}. Die erste Stunde ist kostenlos. Sie erfahren dabei alles wichtige zur Methode von Paramediform."}/
{% endblock %}


{% block content/main/title %}
%h1.title Ernährungsberatung {{ institute.name }} - Kontakt
{% endblock %}

{% block content/main/tab_pane %}
{% if contact.errors.size >0 %}
.alert.alert-warning
  %strong {{ 'following_errors_occured' | translate }}:
  %ul
    {% for error in contact.errors %}
    {% unless error[0] == '_slug' %}
    %li
      {{ error[0] | prepend: 'contact_labels_' | translate }}
      &nbsp;
      {{ 'contact_label_is_required' | translate }}
    {% endunless %}
    {% endfor %}
{% else %}
{% if contact.surname.size > 0 %}

.alert.alert-success{ type:'hidden'}
  %strong{ type:'hidden'} Besten Dank {{ contact.surname }} {{ contact.lastname }}, wir werden uns bei Ihnen melden.
  
{% endif %}
{% endif %}

{% model_form 'contacts', class: 'form-horizontal', success: path %}

%input{ type: 'hidden', name: 'notified_accounts', value: 'to-be-repl-by-js' }

%h2 Hiermit kontaktieren Sie das Institut {{ institute.name }}:
%br
.row
  .col-sm-6.col-xs-12
    %img.img-responsive{ src: '{{ information.image | resize: "645x" }}' }
    %br
  .col-sm-6.col-xs-12
    ParaMediForm {{ institute.name }}
    %br
    {{ institute.street }} {{ institute.streetnumber }}
    %br
    {{ institute.zip }} {{ institute.city }}
    %br
    %br
    {% if institute.phone != '' and institute.phone != null %}
    {{ "label_phone" | translate }} {{ institute.phone }}
    %br
    {% endif %}
    {% if institute.fax != '' and institute.fax != null %}
    {{ "label_fax" | translate }} {{ institute.fax }}
    %br
    {% endif %}
    {% if institute.email != '' and institute.email != null %}
    {{ institute.email }}
    %br
    {% endif %}
    %br

%legend Thema
.row{:style => "margin-bottom: 20px"}
  .col-sm-6.col-xs-12
    %input{:type => "hidden", :name => "content[subject]", :value => "Möchte Unterlagen"}
    %input{:type => "hidden", :name => "content[subject]", :value => "Anfrage neues Institut"}
    .radio
      %label
        %input{:type => "radio", :name => "content[subject]", :value => "Kostenlose Terminvereinbarung", :checked => ""} Wünsche kostenlose Beratung
    .radio
      %label
        %input{:type => "radio", :name => "content[subject]", :value => "Fragen zur Methode"} Habe Fragen zur Methode
  .col-sm-6.col-xs-12
    .radio
      %label
        %input{:type => "radio", :name => "content[subject]", :value => "Paravita Beratung"} Möchte eine Paravita Beratung
    .radio
      %label
        %input{:type => "radio", :name => "content[subject]", :value => "Rückmeldung"} Allgemeine Rückmeldung

%legend Absender
.row
  .col-sm-6.col-xs-12
    %select{ class: 'form-control', name: 'content[salutation]', placeholder: "Anrede" }
      {% for option in contents.contacts.salutation_options %}
      %option {{ option }}
      {% endfor %}
    %br
.row
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[surname]", :value => "{{ params.content.surname }}", :placeholder => "Vorname"}
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[lastname]", :value => "{{ params.content.lastname }}", :placeholder => "Nachname"}
.row
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[address]", :value => "{{ params.content.address }}", :placeholder => "Adresse"}
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[housenumber]", :value => "{{ params.content.housenumber }}", :placeholder => "Hausnummer"}
.row
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[zipcode]", :value => "{{ params.content.zipcode }}", :placeholder => "PLZ"}
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[place]", :value => "{{ params.content.place }}", :placeholder => "Ort"}
.row
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[phone]", :value => "{{ params.content.phone }}",:placeholder => "Telefon"}
  .col-sm-6.col-xs-12
    %input{:class => "form-control", :type => "text", :name => "content[email]", :value => "{{ params.content.email }}", :placeholder => "E-Mail"}
.row
  .col-sm-12.col-xs-12
    .checkbox
      %label
        %input{:type => "checkbox", :name => "content[existing_customer]"} Ich bin oder war bereits Kundin oder Kunde bei ParaMediForm.
    %br
%legend Nachricht
%textarea{:class => "form-control", :name => "content[message]", :value => "{{customer_message.name}}" } {{customer_message.message}}
%br
.checkbox
  %label
    %input{:type => "checkbox", :name => "content[newsletter]", :checked => "yes"} Gerne erhalte ich auch in Zukunft Informationen von und über ParaMediForm.
%br
%br
%input{:type => "hidden", :name => "content[institute]", :value => "{{ institute.name }}"}
.text-center
  %button{ :class => "btn btn-primary", :type => "submit"} Senden
%br
{% endmodel_form %}
%hr
{% endblock %}
