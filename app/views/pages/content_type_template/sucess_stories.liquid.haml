---
title: Erfolge
slug: erfolgsgeschichten
published: true
listed: true
position: 1
handle: institute_success_stories
editable_elements:
  "content/sidebar/news": "false"
---

{% extends parent %}

{% comment %}
{% capture url %}{{ institute.url }}/{{locale}}/success-stories/all.json{% endcapture %}
{% consume data from url %}
{% assign success_stories = data.success_stories %}
{% endconsume %}
{% block content/main/tab_pane %}

{% if params.slug %}

{% capture url %}{{ institute.url }}/{{locale}}/success-stories/one.json?slug={{ params.slug }}{% endcapture %}
{% consume data from url %}
{% assign success_story = data.success_story.first %}
{% endconsume %}

{% include generate_subnavigation with all:success_stories, this:success_story %}
{% include before_after_detail %}

{% else %}
/ by default, we display the list of success stories
.row
  {% for success_story in success_stories %}
  {% if success_story.prename != "" %}
  .col-sm-6.col-xs-12
    %a.non-link-style{ href: "?slug={{ success_story.slug }}&page={{ params.page }}" }
      {% include before_after_overview %}
  {% endif %}
  {% endfor %}

{% endif %}

{% endblock %}
{% endcomment %}


{% if params.slug %}
{% block share_meta_tags %}	
{% capture url %}{{ institute.url }}/{{locale}}/success-stories/all.json{% endcapture %}
{% consume data from url %}
{% assign success_stories = data.success_stories %}
{% endconsume %}
%meta{:content => "Erfolgsgeschichten: {{ success_story.prename | append: ' ' | append: success_story.name | append: ' aus ' | append: success_story.place | append: ' hat' | append: success_story.lost_weight | append: ' Kg abgenommen' }}", :property => "og:title"}
%meta{:content => "{{ success_story.experience }}", :property => "og:description"}
%meta{:content => "website", :property => "og:type"}
%meta{:content => "http://{{ host }}{{ success_story.after_image.url }}", :property => "og:image"}
%meta{:content => "320", :property => "og:image:width"}
%meta{:content => "640", :property => "og:image:height"}
%meta{:content => "{{ url }}", :property => "og:url"}
{% endblock %}
{% endif %}
