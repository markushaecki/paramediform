---
title: Bild in Textfluss
published: false
is_layout: true
handle: multiple_text_image
---
{% extends layouts/double-columns %}

{% block content/main %}

.textpadding
  {% include site_header %}
  - 8.times do |i|
    {% capture title %}{% editable_text "Titel #{i + 1}", format:raw, priority:"#{27 - i*3}", line_break: false, rows: 1 %}{% endeditable_text %}{% endcapture %}
    {% if title.size > 0 %}
    %h3.textpadding{:style => "margin-bottom:0;clear: both"} {{ title }}
    {% endif %}
    {% capture image %}{% editable_file "Bild #{i + 1}", priority:"#{26 - i*3}" %}{% endeditable_file %}{% endcapture %}
    {% if image.size > 0 %}
    %img.textpadding.img-responsive{ src: "{{ image | resize: '200x' }}",:style => "float:left;margin-right:20px" }
    {% endif %}
    {% capture text %}{% editable_text "Text #{i + 1}", priority:"#{25 - i*3}", format:raw %}{% endeditable_text %}{% endcapture %}
    {% if text.size > 0 %}
    .paddingactive {{ text }}
    {% endif %}
  {% include site_footer %}
{% endblock %}
