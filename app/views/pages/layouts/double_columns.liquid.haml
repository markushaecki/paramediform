---
title: Double columns
published: false
handle: double_columns_layout
position: 5
---
{% extends layouts/simple %}

{% block content %}

.row
  .col-sm-9.col-xs-12
    #main
      {% block main %}
      {% endblock %}
      {% block sidebar %}
      
  .col-sm-3.col-xs-12
    #sidebar
      %form{:action => '{% path_to search %}', :role => "search"}
        .form-group
          %input.form-control{name: 'q', :type => "text", :placeholder => "Wonach suchen Sie?"}
          //%button.btn.btn-default{:type => "submit"} Suchen

      / contact block
      %a{ href: '{% path_to contact_form %}', :id => "sidebar_contact" }
        .contact.well
          %h3.text-center
            {{ 'sidebar_contact_title' | translate }}
          %h2.text-center{:style => "color:black;text-decoration: none;font-size:27px !important"}
            %span.glyphicon.glyphicon-earphone{:style => "text-decoration: none"}
            %span.glyphicon.glyphicon-envelope{:style => "text-decoration: none"}
      
      / institutes block
      {% capture enable_institutes %}{% editable_control "Institute", options: 'true=Yes,false=No', hint: "Link zur Übersicht über alle Institute" %}false{% endeditable_control %}{% endcapture %}
      {% if enable_institutes == "true" %}
      %a{ href: '{% path_to institutes %}'}
        .institutes.well
          %h3.text-center
            {{ 'sidebar_institutes_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_institute.png' | theme_image_url | resize: 'x80' }}", style: 'height: 40px' }
      {% endif %}

      / selbststaendigkeit block
      {% capture enable_selbststaendigkeit %}{% editable_control "Selbststaendigkeit", options: 'true=Yes,false=No', hint: "Link zur Informationsseite zum Paramediform Ausbildung und Selbstständigkeit" %}false{% endeditable_control %}{% endcapture %}
      {% if enable_selbststaendigkeit == "true" %}
      %a{ href: '/unternehmen/selbststaendigkeit' }
        .news.well
          %h3.text-center
            {{ 'sidebar_selbststaendigkeit_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_selbststaendigkeit.png' | theme_image_url | resize: 'x100' }}", style: 'height: 50px' }
      {% endif %}

      / paravita block
      {% capture enable_paravita %}{% editable_control "Paravita", options: 'true=Yes,false=No', hint: "Zeigt einen Link zu den Paravita Produkten an. " %}false{% endeditable_control %}{% endcapture %}
      {% if enable_paravita == "true" %}
      %a{ href: '/produkte/paravita'}
        .institutes.well
          %h3.text-center
            {{ 'sidebar_paravita_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_paravita.png' | theme_image_url | resize: 'x100' }}", style: 'height: 50px' }
      {% endif %}

      / parapan block
      {% capture enable_parapan %}{% editable_control "Parapan", options: 'true=Yes,false=No', hint: "Zeigt einen Link zur Parapan Webseite an." %}false{% endeditable_control %}{% endcapture %}
      {% if enable_parapan == "true" %}
      %a{ href: 'http://parapan.locomotivehosting.com'}
        .institutes.well
          %h3.text-center
            {{ 'sidebar_parapan_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_parapan.png' | theme_image_url | resize: 'x120' }}", style: 'height: 60px' }
      {% endif %}

      / parapan block
      {% capture enable_methode %}{% editable_control "Methode", options: 'true=Yes,false=No', hint: "Zeigt einen Link zur Methode an." %}true{% endeditable_control %}{% endcapture %}
      {% if enable_methode == "true" %}
      %a{ href: '/abnehmen/die-methode'}
        .institutes.well
          %h3.text-center
            {{ 'sidebar_method_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_methode.png' | theme_image_url | resize: 'x120' }}", style: 'height: 60px' }
      {% endif %}

      / news block
      {% capture enable_news %}{% editable_control "Aktuelles", options: 'true=Yes,false=No', hint: "Link zur Seite Aktuelles" %}true{% endeditable_control %}{% endcapture %}
      {% if enable_news == "true" %}
      %a{ href: '{% path_to news %}' }
        .news.well
          %h3.text-center
            {{ 'sidebar_news_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_news.png' | theme_image_url | resize: 'x120' }}", style: 'height: 60px' }
      {% endif %}
      
      / vorhernachher block
      {% capture enable_beforeafter %}{% editable_control "Vorher/Nachher", options: 'true=Yes,false=No', hint: "Link zu Vorher/Nachher Bilder" %}true{% endeditable_control %}{% endcapture %}
      {% if enable_beforeafter == "true" %}
      %a{ href: '{% path_to system_success_stories %}' }
        .news.well
          %h3.text-center
            {{ 'sidebar_beforeafter_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_vorhernachher.png' | theme_image_url | resize: 'x120' }}", style: 'height: 60px' }
      {% endif %}

      / Kochbuch block
      {% capture enable_kochbuch %}{% editable_control "Kochbuch", options: 'true=Yes,false=No', hint: "Link zum Bestellen von Kochbuch" %}false{% endeditable_control %}{% endcapture %}
      {% if enable_kochbuch == "true" %}
      %a{ href: '/produkte/kochbuch' }
        .well
          %h3.text-center
            {{ 'sidebar_kochbuch_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_kochbuch.png' | theme_image_url | resize: 'x160' }}", style: 'height: 80px' }
      {% endif %}

      / Kochbuch block
      {% capture enable_kinder %}{% editable_control "Kinderprogramm", options: 'true=Yes,false=No', hint: "Link zum Kinderprogramm Parolino" %}false{% endeditable_control %}{% endcapture %}
      {% if enable_kinder == "true" %}
      %a{ href: '/abnehmen/parolino-das-kinderprogramm' }
        .well
          %h3.text-center
            {{ 'sidebar_kinder_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_parolino.png' | theme_image_url | resize: 'x60' }}", style: 'height: 30px' }
      {% endif %}
      
  {% endblock %}

{% endblock %}
