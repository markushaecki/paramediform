---
title: Double columns
published: false
handle: double_columns_layout
---
{% extends layouts/simple %}

{% block content %}

.row
  .col-sm-9.col-xs-12
    #main
      {% block main %}
      {% endblock %}

  .col-sm-3.col-xs-12
    #sidebar
      {% block sidebar %}
      %form{:role => "search"}
        .form-group
          %input.form-control{:type => "text", :placeholder => "Wonach suchst du?"}
          //%button.btn.btn-default{:type => "submit"} Suchen

      / contact block
      {% capture enable_contact %}{% editable_control "contact", options: 'true=Yes,false=No', hint: "Tell if the contact block in the sidebar is displayed or not %}true{% endeditable_control %}{% endcapture %}
      {% if enable_contact == "true" %}
      %a{ href: '#' }
        .contact.well
          %h3.text-center
            {{ 'sidebar_contact_title' | translate }}
          %h3.text-center{:style => "color:black;text-decoration: none"}
            %span.glyphicon.glyphicon-earphone{:style => "text-decoration: none"}
            %span.glyphicon.glyphicon-envelope{:style => "text-decoration: none"}
        {% endif %}

      / institutes block
      {% capture enable_institutes %}{% editable_control "institutes", options: 'true=Yes,false=No', hint: "Tell if the institutes block in the sidebar is displayed or not %}true{% endeditable_control %}{% endcapture %}
      {% if enable_institutes == "true" %}
      %a{ href: '{% path_to institutes %}'}
        .institutes.well
          %h3.text-center
            {{ 'sidebar_institutes_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_institute.png' | theme_image_url | resize: 'x20' }}" }
      {% endif %}

      / news block
      {% capture enable_news %}{% editable_control "news", options: 'true=Yes,false=No', hint: "Tell if the news block in the sidebar is displayed or not %}true{% endeditable_control %}{% endcapture %}
      {% if enable_news == "true" %}
      %a{ href: '{% path_to news %}' }
        .news.well
          %h3.text-center
            {{ 'sidebar_news_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_news.png' | theme_image_url | resize: 'x30' }}" }
      {% endif %}

      {% endblock %}

{% endblock %}
