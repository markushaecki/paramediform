---
title: Double columns
published: false
handle: double_columns_layout
position: 5
---
{% extends layouts/simple %}

{% block content %}

.row
  .col-sm-9.col-xs-12{ :style => "padding-left:0;padding-right:0"}
    #main
      {% block main %}
      {% endblock %}
      {% block sidebar %}
      
  .col-sm-3.col-xs-12
    #sidebar
      %form{:action => '{% path_to search %}', :role => "search"}
        .form-group
          %input.form-control{name: 'q', :type => "text", :placeholder => "Wonach suchen Sie?"}
          //%button.btn.btn-default{:type => "submit"} Suchen

      / snipcart summary block
      %div.fixedfooter.dontshow
        %a.warenkorb-style{:href => "#"}
          #snipcart-shop.shop.well{:style => "padding:5px"}
            %div{:style => "text-align: center;display:flex;align-items: center;justify-content: center;margin-left: auto;margin-right: auto"}
              .text-center{:style => "float:left"}
                %img{ src: "{{ 'warenkorb.png' | theme_image_url | resize: 'x120' }}", style: 'height: 60px', alt: "Mineralstoffe kaufen" }
              .snipcart-summary.text-center{:style => "float:left;margin-left:40px"}
                %span.snipcart-total-items
                Produkte
                %br
                %span.snipcart-total-price      

      %div.insidebar
        %a.warenkorb-style{:href => "#"}
          #snipcart-shop.shop.well
            .snipcart-spacer
            %h3.text-center.warenkorb-link-style
              Warenkorb
            .snipcart-spacer
            .text-center
              %img{ src: "{{ 'warenkorb.png' | theme_image_url | resize: 'x120' }}", style: 'height: 60px', alt: "Mineralstoffe kaufen" }
            .snipcart-summary.text-center
              %span.snipcart-total-items
              Produkte
              %br
              %span.snipcart-total-price      
            .snipcart-spacer

      / institutes block
      {% capture enable_institutes %}{% editable_control "Institute", options: 'true=Yes,false=No', hint: "Link zur Übersicht über alle Institute" %}true{% endeditable_control %}{% endcapture %}
      {% if enable_institutes == "true" %}
      %a{ href: '{% path_to institute %}'}
        .institutes.well
          %h3.text-center
            {{ 'sidebar_institutes_title' | translate }}
          .text-center
            %img{ src: "{{ 'Ernaehrungsberatung_Schweiz.jpg' | theme_image_url | resize: 'x100' }}", style: 'height: 50px', alt: "Ernährungsberatung Schweiz" }
      {% endif %}

      / contact block
      %a{ href: '{% path_to contact_form %}', :id => "sidebar_contact" }
        .contact.well
          %h3.text-center
            {{ 'sidebar_contact_title' | translate }}
          %h2.text-center{:style => "color:black;text-decoration: none;font-size:27px !important"}
            %img{ src: "{{ 'sidebar_contact.png' | theme_image_url | resize: 'x100' }}", style: 'height: 50px', alt: "Kontaktieren Sie uns" }
      
      / selbststaendigkeit block
      {% capture enable_selbststaendigkeit %}{% editable_control "Selbststaendigkeit", options: 'true=Yes,false=No', hint: "Link zur Informationsseite zum Paramediform Ausbildung und Selbstständigkeit" %}false{% endeditable_control %}{% endcapture %}
      {% if enable_selbststaendigkeit == "true" %}
      %a{ href: '/unternehmen/selbststaendigkeit' }
        .news.well
          %h3.text-center
            {{ 'sidebar_selbststaendigkeit_title' | translate }}
          .text-center
            %img{ src: "{{ 'Ernaehrungsberatung_Ausbildung.png' | theme_image_url | resize: 'x100' }}", style: 'height: 50px', alt: "Machen Sie sich selbstständig" }
      {% endif %}

      / paravita block
      {% capture enable_paravita %}{% editable_control "Paravita", options: 'true=Yes,false=No', hint: "Zeigt einen Link zu den Paravita Produkten an. " %}false{% endeditable_control %}{% endcapture %}
      {% if enable_paravita == "true" %}
      %a{ href: '/produkte/paravita'}
        .institutes.well
          %h3.text-center
            {{ 'sidebar_paravita_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_paravita.png' | theme_image_url | resize: 'x100' }}", style: 'height: 50px', alt: "Produkte zur Ernährungsergänzung" }
      {% endif %}

      / parapan block
      {% capture enable_parapan %}{% editable_control "Parapan", options: 'true=Yes,false=No', hint: "Zeigt einen Link zur Parapan Webseite an." %}false{% endeditable_control %}{% endcapture %}
      {% if enable_parapan == "true" %}
      %a{ href: 'http://www.parapan.ch'}
        .institutes.well
          %h3.text-center
            {{ 'sidebar_parapan_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_parapan_brot.png' | theme_image_url | resize: 'x120' }}", style: 'height: 60px', alt: "Das Ballaststoffreiche Parapan Brot" }
      {% endif %}

      / parapan block
      {% capture enable_methode %}{% editable_control "Methode", options: 'true=Yes,false=No', hint: "Zeigt einen Link zur Methode an." %}true{% endeditable_control %}{% endcapture %}
      {% if enable_methode == "true" %}
      %a{ href: '/abnehmen/die-methode'}
        .institutes.well
          %h3.text-center
            {{ 'sidebar_method_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_methode.png' | theme_image_url | resize: 'x120' }}", style: 'height: 60px', alt: "Die ParaMediForm Methode" }
      {% endif %}

      / news block
      {% capture enable_news %}{% editable_control "Aktuelles", options: 'true=Yes,false=No', hint: "Link zur Seite Aktuelles" %}true{% endeditable_control %}{% endcapture %}
      {% if enable_news == "true" %}
      %a{ href: '{% path_to news %}' }
        .news.well
          %h3.text-center
            {{ 'sidebar_news_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_news.png' | theme_image_url | resize: 'x120' }}", style: 'height: 60px', alt: "Aktuelle Nachrichten von Paramediform" }
      {% endif %}
      
      / vorhernachher block
      {% capture enable_beforeafter %}{% editable_control "Vorher/Nachher", options: 'true=Yes,false=No', hint: "Link zu Vorher/Nachher Bilder" %}true{% endeditable_control %}{% endcapture %}
      {% if enable_beforeafter == "true" %}
      %a{ href: '{% path_to system_success_story %}' }
        .news.well
          %h3.text-center
            {{ 'sidebar_beforeafter_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_vorhernachher.png' | theme_image_url | resize: 'x120' }}", style: 'height: 60px', alt: "Unsere Erfolgsgeschiten" }
      {% endif %}

      / Kochbuch block
      {% capture enable_kochbuch %}{% editable_control "Kochbuch", options: 'true=Yes,false=No', hint: "Link zum Bestellen von Kochbuch" %}false{% endeditable_control %}{% endcapture %}
      {% if enable_kochbuch == "true" %}
      %a{ href: '/produkte/kochbuch' }
        .well
          %h3.text-center
            {{ 'sidebar_kochbuch_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_kochbuch.png' | theme_image_url | resize: 'x160' }}", style: 'height: 80px', alt: "Das Kochbuch zur Gaumenfreude in allen Jahreszeiten" }
      {% endif %}

      / Kochbuch block
      {% capture enable_kinder %}{% editable_control "Kinderprogramm", options: 'true=Yes,false=No', hint: "Link zum Kinderprogramm Parolino" %}false{% endeditable_control %}{% endcapture %}
      {% if enable_kinder == "true" %}
      %a{ href: '/abnehmen/parolino-das-kinderprogramm' }
        .well
          %h3.text-center
            {{ 'sidebar_kinder_title' | translate }}
          .text-center
            %img{ src: "{{ 'sidebar_parolino.png' | theme_image_url | resize: 'x60' }}", style: 'height: 30px', alt: "Paramediform für Kinder" }
      {% endif %}
      
  {% endblock %}

{% endblock %}
