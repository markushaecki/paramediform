  %body
    #header
      %div.relative_position
        /%img.atmospere{ src: "{{ 'hintergrundbild.png' | theme_image_url }}" }
      .container.relative_position{ :style => "max-width:750px"}
        %p.text-center
          %a{ href: "/index", :style => "text-decoration:none;color:black", :accesskey => "1" }
            %img#logo_img{ src: "{{ 'Logo.png' | theme_image_url | resize: '160x80#' }}", :style => "margin-top:30px" }
            %p.text-center{:style => "font-size:13px"} Institut für Gesundheit, Wohlbefinden und Gewichtsabnahme
        %nav.navbar.navbar-default.navbar-static-top{:role => "navigation"}
          .container{ :style => "width:100%;margin-top:10px;margin-bottom:20px"}
            .navbar-header
              %button.navbar-toggle.collapsed{:type => "button", :data => {:toggle => 'collapse', :target => '#bs-example-navbar-collapse-1'}}
                %span.sr-only Toggle navigation
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
            .collapse.navbar-collapse#bs-example-navbar-collapse-1
              %ul.nav.navbar-nav.nav-justified
                {% nav site, exclude: '^(layouts)', depth: 2, no_wrapper: true, bootstrap: true %}

        {% block header %}
        {% endblock %}

      #content
        .container{ :style => "max-width:750px"}
          //%p.lead
          {% block content %}
          {% endblock %}

          {% include footer %}

