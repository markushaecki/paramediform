---
title: Template of an institute [DE]

# true if the page is published
published: true

# content type that this page is templatizing
content_type: institutes

listed: false

handle: institute_layout
---
{% extends layouts/double-columns %}

{% block header %}

{{ 'jquery.cookie.js' | javascript_tag }}
{{ 'institute.js' | javascript_tag }}

{% endblock %}

{% block content/main %}

{% capture url %}{{institute.url}}/index.json{% endcapture %}
{% consume data from url %}
{% assign information = data.information %}
{% endconsume %}


.row
  .col-sm-10.col-sm-offset-1.col-xs-offset-0.col-xs-12
    %h1 Institut {{ institute.name }}
    #contact_info
      %p.text-center.image_with_background
        %img.img-responsive{ src: "http://maps.google.com/maps/api/staticmap?center={{institute.breitengrad}},{{institute.laengengrad}}&zoom=16&size=650x200&markers=color:red|{{institute.breitengrad}},{{institute.laengengrad}}", :id => "google_map" }
        %ul.pager{:style => "margin-top:0px;margin-bottom:0px" }
          %li.previous
            %a{ href: "", :id => "zoom-out" } - zoom 
          %li.next
            %a{ href: "", :id => "zoom-in" } zoom +

      .row.detailed_institute_info
        .col-sm-6.col-xs-6
          %p {{ information.name }}
          %p {{ information.street }}
          %p {{ information.city }}
        .col-sm-6.col-xs-6
          .text-right
            %p {{ "label_phone" | translate }} {{ information.phone }}
            %p {{ "label_fax" | translate }} {{ information.fax }}
            %p {{ information.email }}

%br

.row
  .col-sm-10.col-sm-offset-1.col-xs-offset-0.col-xs-12
    %ul.nav.nav-tabs
      {% fetch_page institute_layout as root_page %}

      /%li{ class: "{% if page.handle == 'institute_layout' %}active{% endif %}" }
      /  %a{ href: "{% path_to institute %}" } {{ "menu_institute_success_stories" | translate }}

      {% for _page in root_page.children %}
      {% if _page.listed? and _page.published? %}
      / A bit of hack because we can not access the title of the child page
      {% assign title = _page.handle | prepend: "menu_" %}
      %li{ class: "{% if page.fullpath == _page.fullpath %}active{% endif %}" }
        %a{ href: "{% path_to institute %}/{{ _page.slug }}" } {{ title | translate }}
      {% endif %}
      {% endfor %}

    .tabbable
      .tab-content
        .tab-pane.active
          %br
          {% block tab_pane %}			
          {% endblock %}

{% endblock %}