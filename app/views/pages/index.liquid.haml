---
{% extends layouts/simple %}

{% block header %}
{{ 'map.js' | javascript_tag }}
{% endblock %}

{% block content %}

/ Find a random institute
{% assign institute = contents.institutes.all | sample: 1 %}

{% capture url %}{{ institute.url }}/{{ locale }}/success-stories/random.json{% endcapture %}
{% consume data from url %}
{% assign success_story = data.success_story %}
{% endconsume %}

{% comment %}
